<%= set_title "Cuentas" %>

<div class="btnbar">
	<%= link_to_new 'Nueva cuenta', new_cuenta_path %>
</div>

<%= render_notice notice %>

<table class="data">
  <thead>
    <tr>
      <th>Chofer</th>
      <th>Movil</th>
      <th>Estado</th>
      <th>Saldo anterior</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cuentas.each do |cuenta| %>
      <tr>
        <td><%= "#{cuenta.nombre_chofer} (#{cuenta.apodo_chofer})" %></td>
        <td><%= cuenta.nromovil %></td>
        <td><%= cuenta.descripcion_estado %></td>
        <td><%= cuenta.saldo_anterior %></td>
        <td class="action"><%= link_to_edit edit_cuenta_path(cuenta) %></td>
        <td class="action"><%= link_to_delete cuenta %></td>
      </tr>
    <% end %>
  </tbody>
</table>