<%= form_for(@cuenta) do |f| %>
  <%= render_error @cuenta, 'El cuenta' %>

  <div class="field">
    <%= f.label :chofer %><br>
    <%= f.text_field :chofer %>
  </div>
  <div class="field">
    <%= f.label :movil %><br>
    <%= f.text_field :movil %>
  </div>
  <div class="field">
    <%= f.label :estado %><br>
    <%= f.number_field :estado %>
  </div>
  <div class="field">
    <%= f.label :saldo_anterior %><br>
    <%= f.text_field :saldo_anterior %>
  </div>
  <%= form_actions(cuentas_path) %>
<% end %>