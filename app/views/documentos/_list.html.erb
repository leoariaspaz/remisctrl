<div id="imglist">
	<h2>Documentos relacionados</h2>
	<div class="btnbar">
	  <%= link_to_new 'Relacionar un nuevo documento', [:new, documentable, :documento] %>
	  <%= link_to_print({ controller: documentable.class.to_s.pluralize.downcase, action: :print_documentos }, 
	  				{ alt: "imprimir legajo", title: "imprimir legajo" }, "Imprimir documentos") %>
	</div>
	<%= render_notice notice %>
	<ul>
	<% documentable.documentos.each do |d| %>
		<li>
			<%= link_to d.tipo_imagen.descripcion, [documentable, d] %>
			<%= link_to_delete url_for([documentable, d]) %>
		</li>
	<% end %>
	</ul>
	<% if not documentable.documentos.any? %>
		<span class="empty">No existen documentos relacionados</span>
	<% end %>
</div>